{
  "name": "train",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "SpExPlus",
    "args": {
      "n_speakers": 251,
      "speaker_emb_dim": 256
    }
  },
  "data": {
    "train": {
      "batch_size": 4,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDatasetMixed",
          "args": {
            "part": "train-clean-100",
            "nfiles": 20000

          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDatasetMixed",
          "args": {
            "part": "test-clean",
            "nfiles": 3000,
            "limit": 100
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "SpExLoss",
    "args": {
      "alpha": 0.1,
      "beta": 0.1,
      "gamma": 0.5
    }
  },
  "metrics": [
    {
      "type": "SpeakerAccuracyMetric",
      "args": {
        "name": "accuracy"
      }
    },
    {
      "type": "SI_SDRMetric",
      "args": {
        "name": "si_sdr"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingWarmRestarts",
    "args": {
      "T_0": 2000
    }
  },
  "trainer": {
    "epochs": 600,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10000,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 100,
    "grad_norm_clip": 10,
    "resume_path": "saved/models/one_batch_test/1113_155355/checkpoint-epoch115.pth"
  }
}
