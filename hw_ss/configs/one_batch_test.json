{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "SpExPlus",
    "args": {
      "n_speakers": 251,
      "speaker_emb_dim": 256
    }
  },
  "data": {
    "train": {
      "batch_size": 10,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDatasetMixed",
          "args": {
            "part": "train-clean-100",
            "nfiles": 20000,
            "limit": 10
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDatasetMixed",
          "args": {
            "part": "test-clean",
            "nfiles": 3000,
            "limit": 10
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2
    }
  },
  "loss": {
    "type": "SpExLoss",
    "args": {
      "alpha": 0.1,
      "beta": 0.1,
      "gamma": 0.5
    }
  },
  "metrics": [
    {
      "type": "SpeakerAccuracyMetric",
      "args": {
        "name": "accuracy"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
